{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update version variables in Dockerfiles and docker-bake.hcl",
      "fileMatch": ["(^|/|\\.)Dockerfile$", "(^|/|\\.)docker-bake.hcl$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)\\s((?:ENV|ARG) )?.+?\\s*=\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ]
}